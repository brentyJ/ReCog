# ReCog Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM PROVIDERS
# =============================================================================

# Default provider: "openai" or "anthropic"
RECOG_LLM_PROVIDER=openai

# OpenAI Configuration
RECOG_OPENAI_API_KEY=sk-...
RECOG_OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration  
RECOG_ANTHROPIC_API_KEY=sk-ant-api03-...
RECOG_ANTHROPIC_MODEL=claude-sonnet-4-20250514

# =============================================================================
# COST CONTROLS
# =============================================================================

# Maximum spend per session (in cents)
RECOG_COST_LIMIT_CENTS=100

# Maximum tokens per extraction call
RECOG_MAX_TOKENS=2000

# =============================================================================
# SERVER
# =============================================================================

# Server port
RECOG_PORT=5100

# Debug mode (true/false)
RECOG_DEBUG=false

# Data directory (uploads, database)
RECOG_DATA_DIR=./_data

# =============================================================================
# SECURITY (v0.10)
# =============================================================================

# PII Redaction
RECOG_PII_REDACTION=true
RECOG_PII_BACKEND=regex
RECOG_PII_MIN_CONFIDENCE=0.7

# Prompt Injection Detection (off|warn|block)
RECOG_INJECTION_DETECTION=warn

# Token Budget Controls
RECOG_DAILY_TOKEN_LIMIT=100000
RECOG_ENFORCE_BUDGET=false

# =============================================================================
# RATE LIMITING
# =============================================================================

RECOG_RATE_LIMIT_ENABLED=false
RECOG_RATE_LIMIT_DEFAULT=100/hour
RECOG_RATE_LIMIT_EXPENSIVE=10/minute
RECOG_RATE_LIMIT_UPLOAD=50/hour
RECOG_RATE_LIMIT_STORAGE=memory

# =============================================================================
# LOGGING
# =============================================================================

RECOG_LOG_LEVEL=INFO
RECOG_LOG_FILE=
RECOG_LOG_JSON=false

# =============================================================================
# PROCESSING
# =============================================================================

# Maximum file upload size in MB
RECOG_MAX_FILE_SIZE_MB=50

# Auto-progress interval in seconds (case workflow)
RECOG_AUTO_PROGRESS_INTERVAL=5

# Entity validation
RECOG_VALIDATE_ENTITIES_LLM=false
RECOG_SKIP_VALIDATION=false

# =============================================================================
# CACHING
# =============================================================================

RECOG_CACHE_ENABLED=true
RECOG_CACHE_TTL_HOURS=24

# =============================================================================
# LEGACY SUPPORT
# =============================================================================
# These are deprecated, use provider-specific vars above
# RECOG_LLM_API_KEY=
# RECOG_LLM_MODEL=
